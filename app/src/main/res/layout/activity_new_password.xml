<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:text="Введіть код підтвердження та новий пароль"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvHintValCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:text="Код підтвердження"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etValCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:contentDescription="Код підтвердження"
            android:ems="10"
            android:hint="Код підтвердження"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvHintNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:text="Новий пароль" />

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvHintNewPassConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:text="Підтвердіть пароль"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etNewPassConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSubmitNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:text="Підтвердити" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>